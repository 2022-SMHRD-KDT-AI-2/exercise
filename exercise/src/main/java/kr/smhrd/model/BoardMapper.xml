<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.model.BoardMapper">
 
  <select id="selectAll" resultType="kr.smhrd.entity.BoardVO">
     select * from board order by idx desc
  </select>
  
  <insert id="boardInsert" parameterType="kr.smhrd.entity.BoardVO">
     insert into board(idx,title,content,writer)
   values(board_idx.nextval,#{title},#{content},#{writer})
  </insert>
  
  <select id="getByIdx" parameterType="int" resultType="kr.smhrd.entity.BoardVO">
     select * from board where idx=#{idx}
  </select>
   
  <delete id="boardDelete" parameterType="int"> 
     delete from board where idx=#{idx}  
  </delete>
  
  <update id="boardUpdate" parameterType="kr.smhrd.entity.BoardVO">
     update board 
     set title=#{title},content=#{content}
     where idx=#{idx}
  </update>
  
  <update id="addCount" parameterType="int">
     update board 
     set count=count+1
     where idx=#{idx}
  </update>
  
  
</mapper>